#!/usr/bin/env bash
set -x

export REDUX_ASYNC_PAYLOAD_TEST=true

if [ "$CI" = true ]; then
  exec ./node_modules/.bin/mocha \
    --require ts-node/register \
    --full-trace \
    --exit \
    'src/spec/helpers/setup.ts' \
    'src/**/*.spec.ts'
fi

exec ./node_modules/.bin/mocha \
  --inspect=9241 \
  --require ts-node/register \
  --full-trace \
  --watch \
  --watch-extensions ts,tsx,js,jsx,json \
  'src/spec/helpers/setup.ts' \
  'src/**/*.spec.ts'